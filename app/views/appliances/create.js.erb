if($('#bigModal').is(':visible')){
    $('#text').html("ha");
    $('.nav-pills').html("")
        .append("<%= escape_javascript render(partial: "menu") %>");

    $('#bigModal').modal('hide')
        .find("input[type=text],input[type=number]").val('');
}
else if($('#smallModal').is(':visible')){
    var room_in_modal = $( '#smallModalLabel' ).text();
    var room_in_li_tag;
    $('.nav-pills > li').each(function(){
        room_in_li_tag = $(this).find('a').text();
        if (room_in_li_tag == room_in_modal){
            $('#body-table').append()
            $("<%= escape_javascript render(partial: "newAppliance") %>").insertAfter($('[class^="row appliance-entry"]').last());
            return false;
        }
    })
    $('#smallModal').modal('hide')
                    .find("input[type=text],input[type=number]").val('');
}
