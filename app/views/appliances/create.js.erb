if($('#smallModal').is(':visible')){
    var room_in_modal = $( '#smallModalLabel' ).text();
    var room_in_collapse;
    room_in_modal = $.trim(room_in_modal);
    $('#smallModal')
        .modal('hide')
        .find("input[type=text],input[type=number]").val('');
    $( '.panel-default' ).each(function () {
        room_in_collapse = $(this).find('a').text();
        room_in_collapse = $.trim(room_in_collapse);
        if (room_in_collapse === room_in_modal){
            if ($(this).find('a').attr('aria-expanded') == 'true'){
                $(this).find('.panel-body').append("<%= escape_javascript render(partial: "newAppliance", locals: {hash_of_recrods: @hash_of_records }) %>");
            }
            else{
                $('.panel-group').html("")
                                 .append("<%= escape_javascript render(partial: "entries", locals: {hash_of_recrods: @hash_of_records }) %>");
            }
            return false;
        }
    })
}
else if($('#bigModal').is(':visible')){
    $('.panel-group').html("")
                     .append("<%= escape_javascript render(partial: "entries", locals: {hash_of_recrods: @hash_of_records }) %>");
    $('#bigModal').modal('hide')
                  .find("input[type=text],input[type=number]").val('');
}
