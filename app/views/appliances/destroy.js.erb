$('.deletion').bind('ajax:success', function() {
    var room = $(this).closest( '.panel-default' );
    var panel_body_class = room.find("div");
    if (panel_body_class.children('div.appliance-entry').length == 1){
        room.slideUp(500, function() {
            (this).remove();
        });
    }
    else{
        $(this).closest('.appliance-entry').slideUp(500, function() {
            $(this).remove();
        });
    }
});