<%= render partial: "bigModal" %>
<%= render partial: "smallModal" %>
<%= render partial: "editModal" %>
<span id="rooms-span" class="<%= if @rooms.any?
                                   @rooms[0].name
                                 end %>"></span>
<div class="row">
  <div class="col-md-3">
    <!-- It can be fixed with bootstrap affix http://getbootstrap.com/javascript/#affix-->
    <div id="sidebar" class="well sidebar-nav">
      <h5><i class="glyphicon glyphicon-home"></i>
        <small><b>SPOTREBIČE</b></small>
      </h5>
      <ul class="nav nav-pills nav-stacked">
        <%= render partial: "menu", locals: {rooms: @rooms } %>
      </ul>


    </div>
  </div>
  <div class="col-md-9" id="table_entries">
    <% if @rooms.any? %>
      <%= render partial: "entries", locals: {hash_of_recrods: @hash_of_records } %>
    <% else %>
      <p class="no-entries">Nemáš uložené žiadne elektrické spotrebiče...</p>
    <% end %>
  </div>
</div>

<div id="text">

</div>