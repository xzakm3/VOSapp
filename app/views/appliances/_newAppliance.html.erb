<div class="row appliance-entry">
  <div class="col-md-3 col-xs-3">
    <%= @appliance.name %>
  </div>
  <div class="col-md-3 col-xs-3">
    <%= @performance_of_appliance.performance %>
  </div>
  <div class="col-md-3 col-xs-3">
    <%= @entry.count %>
  </div>
  <div class="col-md-3 col-xs-3 UD-components">
    <%= link_to user_appliance_path(current_user, @appliance.id, entry_id: @entry.id, room_id: @room.id), method: :delete, data: {confirm: "You sure?"}  do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to user_appliance_path(current_user, @appliance.id, entry_id: @entry.id, room_id: @room.id), method: :delete, data: {confirm: "You sure?"}, remote: true, class: "deletion"  do %>
        <span class="glyphicon glyphicon-remove" id="remove-component" aria-hidden="true"></span>
    <% end %>
  </div>
</div>