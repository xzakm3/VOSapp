<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="navbar navbar-default" role="navigation">
      <% if logged_in? %>
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span
          class="icon-bar"></span><span class="icon-bar"></span>
          </button>
          <%= link_to "Domáce spotrebiče",user_scenarios_path(current_user), class: 'navbar-brand' %>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active">
              <%= link_to user_path(current_user) do %>
                <span class="glyphicon glyphicon-home"></span>Domov
              <% end %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user.admin? %>
              <li><%= link_to "Users", users_path %></li>
            <% end %>
            <li>
              <%= link_to user_appliances_path(current_user), id: 'appliance' do %>
                <span class="glyphicon glyphicon-calendar"></span>Spotrebiče
              <% end %>
            </li>
            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><span
            class="glyphicon glyphicon-user"></span>User <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to edit_user_path(current_user) do %>
                    <span class="glyphicon glyphicon-cog"></span>Nastavenia
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to logout_path, method: "delete" do %>
                    <span class="glyphicon glyphicon-off"></span>Odhlásiť sa
                  <% end %>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      <% else %>
          <ul class="nav navbar-nav navbar-right">
                <li><%= link_to "Prihlásiť sa", login_path %></li>
          </ul>
      <% end %>
      <!-- /.navbar-collapse -->
    </nav>
  </div>
</header>

