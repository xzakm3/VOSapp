<% provide(:title, 'Dashboard') %>
<h1>Scenáre naraz používaných spotrebičov</h1>

  <div class = "row">
    <%= link_to "Vytvor", new_user_scenario_path(current_user), class: "btn btn-primary", id: "new-scenario-button" %>
  </div>
<% if @scenarios == nil or @scenarios.empty? %>
    <p class="no-entries">Nemáš vytvorené žiadne scenáre...</p>
<% else %>
    <%= render partial: "scenarios/scenarios" %>
<% end %>
<br>
<h1>Ceny za pripojenie do distribučnej sústavy na rok 2017 (Západ)</h1>
<br>
<div class="table-responsive">
  <table class="table">
    <thead>
    <tr>
      <th>Istič</th>
      <th>Cena/rok</th>
    </tr>
    </thead>
    <tbody>
    <% flag = 0 %>
    <% @amper_price_west.each do |key, value| %>
      <% if @scenarios.any? && flag == 0 && 3*key > @scenarios[0].power %>
        <tr class="warning">
          <td><b>3x<%= key %> A</b></td>
          <td><b><%= value %> €</b></td>
          <% flag = 1 %>
      <% else %>
        <tr>
          <td>3x<%= key %> A</td>
          <td><%= value %> €</td>
      <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
